        <form action="/verificarQuiz" method="POST">
            <% preguntas.forEach((pregunta, index) => { %>
                <div class="pregunta">
                    <p><strong><%= index + 1 %>. <%= pregunta.pregunta %></strong></p>
                    <% pregunta.opciones.forEach(opcion => { %>
                        <label>
